*
    padding 0
    margin 0

body
    font-size 17px
    font-family "Open Sans", sans-serif
    width 100%
    background lighten(#ccc,80%)
    color #1a1a1a
.wrap
    width 100%
    max-width 600px
    margin 0 auto
    background #fff

.header
    &__logo
        box-sizing border-box
        padding .5em
        width 100%
        img
            max-width 80%
    &__banner
        width 100%
        img
            max-width 100%

section
    box-sizing border-box
    width 100%
    padding 1em

.promocion
    width 98%
    margin 0 auto
    border-bottom 1px solid #ccc

    &__title
        color #e5005b
        width 55%
        border-bottom 4px solid #e5005b

    &__body
        margin-top 1em
        ul
            li
                margin-left 2em
                line-height 1.5
                color #e5005b
                span
                    color #1a1a1a
    &__condiciones
        margin-left 2em
        margin-top 2em
        font-size .6em

    &__btn
        text-align center
        text-decoration none
        font-size 1.2em
        color #fff
        background #e5005b
        padding .3em 1em
        display block
        width 180px
        margin 1em auto
        font-weight bold
        border-radius 2px
        border 1px solid darken(#e5005b,20%)
        box-shadow 0 2px darken(#e5005b,25%)
.servicios
    margin-top 1em
    padding-bottom 1em
    border-bottom 4px solid #e5005b

    &__title
        color #2c0011
        margin-bottom 1em
    &__body
        img
            display inline-block
            max-height 100px
            margin-left 2em


.footer
    width 95%
    margin 0 auto
    font-size .8em
    &__links
        margin-bottom .3em
        img, a
            display inline-block

        img
            max-width 60px

        a
            border-left 1px solid #ccc
            color #e4065e
            padding-left 1em
            margin-left 1em

    &-contact
        font-weight bold
        padding-top .5em
        padding-bottom 1em
